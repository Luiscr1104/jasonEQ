---
import Layout from "@/layouts/Layout.astro";
import BlogCard, { type BlogPost } from "@/components/BlogCard.astro";
import { blogPosts } from "@/data/blogPosts";
---

<Layout title="Blog | Jason Castro – Terrenos en La Fortuna">
  <section class="py-24 bg-background">
    <div class="container max-w-7xl px-6 sm:px-8 mx-auto">
      <!-- Encabezado -->
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <span class="inline-block text-primary font-medium mb-2"
          >BLOG OFICIAL</span
        >
        <h1
          class="font-serif text-4xl sm:text-5xl font-bold tracking-tight text-foreground"
        >
          Consejos, inversión y noticias
        </h1>
        <p class="mt-4 text-lg text-muted-foreground">
          Información valiosa sobre la compra de terrenos, inversión
          inmobiliaria y novedades del mercado en Costa Rica.
        </p>
      </div>

      <!-- Grid de artículos -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post) => <BlogCard post={post} />)}
      </div>

      <!-- CTA al final -->
      <div class="mt-20 text-center">
        <a
          href="/"
          class="inline-block text-sm font-medium border border-primary text-foreground px-6 py-3 rounded-md hover:bg-primary hover:text-white transition"
        >
          Volver al inicio
        </a>
      </div>
    </div>
  </section>
</Layout>
