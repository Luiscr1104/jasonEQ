---
const title =
  "Terrenos en La Fortuna desde ‚Ç°230.000/mes | Financiamiento sin bancos";
const description =
  "Explor√° terrenos en venta en La Fortuna con planos listos, uso de suelo aprobado y cuotas desde ‚Ç°230.000. Financiamiento sin bancos, asesor√≠a personalizada.";
const ogUrl = "https://terrenoslafortunacr.com/propiedades";
const ogImage = "https://terrenoslafortunacr.com/og-propiedades.jpg";

import BaseLayout from "@/layouts/Layout.astro";
import {
  fetchEcwidProducts,
  type EcwidProduct,
} from "@/lib/fetchEcwidProducts";

const products: EcwidProduct[] = await fetchEcwidProducts();
---

<BaseLayout {title} {description} {ogUrl} {ogImage}>
  <div class="text-center mb-16 mt-20">
    <div
      class="inline-flex items-center rounded-full border border-primary/20 px-3 py-1 text-sm text-primary mb-4 bg-primary/10"
    >
      <span class="font-medium">Terrenos oficiales</span>
      <span class="mx-2">‚Ä¢</span>
      <span class="text-foreground">Grupo Ecoquintas</span>
    </div>
    <h2
      class="font-serif text-3xl font-bold tracking-tight sm:text-4xl text-foreground"
    >
      Terrenos <span class="text-primary">Disponibles</span>
    </h2>
    <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
      Te ayudo a encontrar el terreno ideal de Grupo Ecoquintas que se adapte a
      tus necesidades y presupuesto.
    </p>
  </div>

  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-7xl mx-auto px-6 pb-24"
  >
    {
      products.map((product) => {
        const precioAttr = product.attributes?.find(
          (attr) => attr.name === "Precio"
        )?.value;
        const metrosAttr = product.attributes?.find(
          (attr) => attr.name === "Metros Cuadrados"
        )?.value;

        return (
          <a
            href={`/propiedades/${product.id}`}
            class="group block rounded-3xl border border-border bg-white shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden"
          >
            <div class="relative w-full h-64">
              <img
                src={product.imageUrl}
                alt={product.name}
                class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
              />
              <span class="absolute top-3 left-3 bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow">
                Disponible
              </span>
            </div>

            <div class="p-6 space-y-3">
              <h3 class="text-lg font-bold text-foreground group-hover:text-primary leading-snug">
                {product.name}
              </h3>

              {metrosAttr && (
                <p class="text-sm text-muted-foreground">
                  <span class="inline-block mr-1">üìê</span>
                  {metrosAttr} m¬≤
                </p>
              )}

              {precioAttr && (
                <p class="text-base font-bold text-primary mt-2">
                  {precioAttr}
                </p>
              )}

              <div class="pt-2">
                <div class="inline-block bg-primary text-white text-sm font-semibold px-5 py-2 rounded-lg shadow-md transition-all duration-300 transform group-hover:translate-y-[-2px] group-hover:shadow-lg hover:bg-primary/90">
                  Ver detalles
                </div>
              </div>
            </div>
          </a>
        );
      })
    }
  </div>
</BaseLayout>
