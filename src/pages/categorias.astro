---
import BaseLayout from '@/layouts/Layout.astro';
import { fetchEcwidCategories, type EcwidCategory } from '@/lib/fetchEcwidCategories';

const categories: EcwidCategory[] = await fetchEcwidCategories();
---

<BaseLayout title="Categorías en venta | Grupo Ecoquintas">
    <section class="max-w-6xl mx-auto px-6 m-32">
      <h1 class="text-3xl font-bold mb-8 text-center">Explorá nuestras categorías</h1>
  
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        {categories.map(category => {
          const image =
            category.hdThumbnailUrl ||
            category.thumbnailUrl ||
            category.imageUrl;
  
          return (
            <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 flex flex-col">
              {image ? (
                <img
                  src={image}
                  alt={category.name}
                  class="h-48 w-full object-cover"
                />
              ) : (
                <div class="h-48 w-full bg-gray-100 flex items-center justify-center text-gray-400 text-sm">
                  Sin imagen
                </div>
              )}
  
              <div class="p-5 flex flex-col justify-between flex-grow">
                <div>
                  <h2 class="text-xl font-bold text-gray-800 mb-1">{category.name}</h2>
                  {category.productCount > 0 && (
                    <p class="text-sm text-gray-500">{category.productCount} propiedades</p>
                  )}
                </div>
  
                <a href={`/categoria/${category.id}`} class="mt-4 text-center text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 px-4 py-2 rounded-md transition-colors">
                  Ver propiedades
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </section>
  </BaseLayout>
  
