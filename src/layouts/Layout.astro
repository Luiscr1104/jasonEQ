---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ChatWidget from "@/components/ChatWidget.astro";

const {
  title = "Terrenos en La Fortuna desde ₡30.000/mes | Compra sin bancos",
  description = "Compra terrenos en La Fortuna con financiamiento directo. Desde ₡30.000 al mes. Sin bancos, sin trámites complejos. Asesoría personalizada con Jason Castro.",
  children,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WMJG45547S"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      window.gtag = function () {
        window.dataLayer.push(arguments);
      };

      window.gtag("js", new Date());
      window.gtag("config", "G-WMJG45547S");
    </script>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://www.terrenoslafortunacr.com" />
    <meta
      property="og:image"
      content="https://www.terrenoslafortunacr.com/og-categorias.jpg"
    />
    <meta property="og:type" content="website" />
    <script type="module" src="/scripts/alpine.js"></script>
  </head>

  <body>
    <Header />
    <slot>
      <div
        class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
      >
      </div>
    </slot>
    <ChatWidget />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
