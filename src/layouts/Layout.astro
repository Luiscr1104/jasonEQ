---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ChatWidget from "@/components/ChatWidget.astro";

const {
  title,
  description = "Terrenos en Venta en La Fortuna",
  children,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Google tag (gtag.js) -->
    <script>
      window.dataLayer = window.dataLayer || [];
      window.gtag = function () {
        window.dataLayer.push(arguments);
      };

      window.gtag("js", new Date());
      window.gtag("config", "G-WMJG45547S");
    </script>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta
      name="description"
      content={description ||
        "Encuentra categorías de terrenos en venta en La Fortuna con Grupo Ecoquintas. Opciones residenciales, comerciales, de inversión y más."}
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ||
        "Terrenos en venta organizados por categoría. Elige tu inversión ideal con asesoría personalizada."}
    />
    <meta
      property="og:url"
      content="https://terrenoslafortunacr.com/categorias"
    />
    <meta
      property="og:image"
      content="https://terrenoslafortunacr.com/og-categorias.jpg"
    />
    <meta property="og:type" content="website" />
  </head>

  <body>
    <Header />
    <slot>
      <div
        class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
      >
      </div>
    </slot>
    <ChatWidget />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
