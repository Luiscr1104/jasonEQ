---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ChatWidget from "@/components/ChatWidget.astro";
import ExitIntentPopup from "@/components/ExitIntentPopup.astro";

const {
  title = "Terrenos en La Fortuna desde ₡230.000 al mes | Financiamiento sin bancos",
  description = "Compra terrenos en La Fortuna con financiamiento directo. Desde ₡230.000 al mes. Sin bancos, sin trámites complejos. Asesoría personalizada con Jason Castro.",
  ogImage = "https://www.terrenoslafortunacr.com/og-categories.png",
  ogUrl = "https://www.terrenoslafortunacr.com",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Analytics 4 con Consent Mode V2 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VX9DP9C2DB"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("consent", "default", {
        ad_storage: "denied",
        analytics_storage: "denied",
      });
      gtag("js", new Date());
      gtag("config", "G-VX9DP9C2DB", {
        anonymize_ip: true,
        allow_ad_personalization_signals: false,
      });
    </script>

    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-WTNGG5FW");
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={ogUrl} />

    <!-- Open Graph -->
    <meta property="og:locale" content="es_ES" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:site_name" content="Terrenos La Fortuna CR" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- JSON-LD Schema -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Terrenos La Fortuna CR",
        "url": "https://www.terrenoslafortunacr.com",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.terrenoslafortunacr.com/?s={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link
      rel="preload"
      as="image"
      href="/Slider.webp"
      type="image/webp"
      fetchpriority="high"
    />

    <!-- Alpine con plugin collapse -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js?plugins=collapse"
    ></script>
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WTNGG5FW"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>

    <!-- Cookie Consent Banner -->
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        if (!localStorage.getItem("cookieConsent")) {
          const banner = document.createElement("div");
          banner.className =
            "fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 text-center p-4 z-[9999] shadow-xl";
          banner.innerHTML = `
            <p class="text-sm text-gray-700 mb-2">Usamos cookies para mejorar tu experiencia y analizar el tráfico. ¿Aceptás?</p>
            <button id="acceptCookies" class="bg-primary text-white px-4 py-2 rounded text-sm font-semibold">Aceptar</button>
          `;
          document.body.appendChild(banner);
          document
            .getElementById("acceptCookies")
            .addEventListener("click", () => {
              gtag("consent", "update", {
                ad_storage: "granted",
                analytics_storage: "granted",
              });
              localStorage.setItem("cookieConsent", "true");
              banner.remove();
            });
        }
      });
    </script>

    <Header />
    <slot>
      <div
        class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
      >
      </div>
    </slot>
    <ChatWidget />
    <ExitIntentPopup />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
