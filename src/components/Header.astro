---
// No script necesario, todo es HTML + Tailwind
import { PhoneCall, Menu } from "@/components/icons";
---

<header
  class="sticky top-0 z-50 w-full border-b bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60"
>
  <div class="container flex h-16 items-center justify-between">
    <!-- Branding -->
    <div class="flex items-center gap-3 ml-4">
      <a href="/" class="flex items-center gap-2">
        <img
          src="/logo.png"
          alt="Jason Castro"
          class="w-10 h-10 shadow border border-white"
        />
        <span class="flex flex-col leading-tight">
          <span class="text-base font-semibold text-secondary"
            >Jason Castro</span
          >
          <span class="text-xs text-muted-foreground">Asesor Inmobiliario</span>
        </span>
      </a>
    </div>

    <!-- Menú Mobile -->
    <button
      class="lg:hidden p-2 rounded-md hover:bg-primary/10"
      aria-label="Abrir menú"
    >
      <Menu class="size-6 text-secondary" />
    </button>

    <!-- Menú Desktop -->
    <nav class="hidden lg:flex items-center gap-8">
      {
        [
          ["Terrenos", "#categories"],
          ["Beneficios", "#beneficios"],
          ["Mis Servicios", "#servicios"],
          ["Testimonios", "#testimonios"],
          ["Contacto", "#contacto"],
        ].map(([label, href]) => (
          <a
            href={`/${href}`}
            class="text-sm font-bold transition-colors hover:text-primary relative group"
          >
            {label}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all group-hover:w-full" />
          </a>
        ))
      }
    </nav>

    <!-- Acciones -->
    <div class="hidden md:flex items-center gap-4">
      <a
        href="tel:+50660637256"
        class="flex items-center gap-2 border text-sm px-4 py-2 rounded-md border-primary/30 text-secondary hover:bg-primary/10"
      >
        <PhoneCall class="h-4 w-4 text-primary" />
        <span>+506 6063 7256</span>
      </a>
      <a
        href="/categorias"
        class="bg-primary hover:bg-primary/90 text-white text-base font-bold px-6 py-3 rounded-md shadow-md transition-all duration-300 hover:scale-105 hover:shadow-lg"
      >
        Tienda
      </a>
    </div>
  </div>
</header>
