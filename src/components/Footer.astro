---
import FacebookIcon from "@/components/icons/FacebookIcon.astro";
import TwitterIcon from "@/components/icons/TwitterIcon.astro";
import InstagramIcon from "@/components/icons/InstagramIcon.astro";
---

<!-- Banner CTA Superior -->
<section
  class="relative z-10 bg-white border border-primary/10 py-12 px-6 rounded-2xl shadow-lg max-w-6xl mx-auto -mb-28"
>
  <div
    class="flex flex-col md:flex-row items-center justify-between gap-6 text-center md:text-left"
  >
    <div class="flex-1">
      <h3 class="text-2xl font-bold text-foreground">
        ¿Tienes un proyecto en mente?
      </h3>
      <p class="text-muted-foreground mt-2 max-w-md mx-auto md:mx-0">
        Contactá con nosotros para recibir asesoramiento y opciones
        personalizadas para tu terreno ideal en Costa Rica.
      </p>
    </div>
    <div class="mt-6 md:mt-0">
      <a
        href="/#contacto"
        class="bg-primary text-white font-semibold px-6 py-3 rounded-lg shadow hover:bg-primary/90 transition inline-block"
      >
        Contáctanos
      </a>
    </div>
  </div>
</section>

<footer class="bg-[#1C1C1C] pt-44 pb-10 text-white">
  <div
    class="max-w-7xl mx-auto px-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 text-center sm:text-left"
  >
    <!-- Logo y descripción -->
    <div>
      <img
        src="/jason-profile.webp"
        alt="Jason Castro"
        class="size-24 mb-4 mx-auto sm:mx-0 rounded-full"
      />
      <p class="mb-4 max-w-sm mx-auto sm:mx-0 text-[#cbd5e1]">
        Líder en ventas de propiedades en Costa Rica. Más de 10 años cumpliendo
        sueños.
      </p>
      <div class="flex justify-center sm:justify-start space-x-3">
        <a
          href="https://www.facebook.com/JasonCastroVentaPropiedades"
          class="w-9 h-9 flex items-center justify-center rounded-full bg-primary text-white hover:bg-primary/90 transition"
        >
          <FacebookIcon class="w-4 h-4" />
        </a>
      </div>
    </div>

    <!-- Enlaces -->
    <div>
      <h4 class="font-semibold text-lg mb-3 text-primary">Enlaces</h4>
      <ul class="space-y-2 text-[#94a3b8]">
        <li><a href="/" class="hover:text-primary">Inicio</a></li>
        <li>
          <a href="/propiedades" class="hover:text-primary">Propiedades</a>
        </li>
        <li>
          <a href="/#categories" class="hover:text-primary">Categorías</a>
        </li>
        <li><a href="/#contacto" class="hover:text-primary">Contacto</a></li>
      </ul>
    </div>

    <!-- Contacto -->
    <div>
      <h4 class="font-semibold text-lg mb-3 text-primary">Contacto</h4>
      <ul class="space-y-4 text-sm text-[#94a3b8]">
        <li class="flex items-start gap-3 justify-center sm:justify-start">
          <i class="fas fa-phone-alt text-primary"></i>
          <span><a href="tel:+50660637256">+506 6063-7256</a></span>
        </li>
        <li class="flex items-start gap-3 justify-center sm:justify-start">
          <i class="fas fa-envelope text-primary"></i>
          <span
            ><a href="mailto:jcastro@ecoquintas.com">jcastro@ecoquintas.com</a
            ></span
          >
        </li>
        <li class="flex items-start gap-3 justify-center sm:justify-start">
          <i class="fas fa-map-marker-alt text-primary"></i>
          <span>La Fortuna, San Carlos, Costa Rica</span>
        </li>
      </ul>
    </div>
  </div>

  <!-- Créditos -->
  <div
    class="text-center text-sm text-white mt-10 border-t border-white/10 pt-4"
  >
    &copy; {new Date().getFullYear()}
    <a
      href="https://luisroberto.dev"
      class="text-primary hover:underline font-medium">luisroberto.dev</a
    >. Todos los derechos reservados.
  </div>
</footer>
